<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div>
    <div class="flex justify-center items-center">
      <%= link_to root_path, class: "flex flex-shrink-0 items-center gap-2" do %>
        <img class="h-8 w-auto" src="/logo.png" alt="Logo">
        <p class="text-xl md:text-2xl text-primary font-medium">homely</p>
      <% end %>
    </div>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
      Sign up
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "block w-full rounded-md border-0 py-1.5 text-gray-900
                                    shadow-sm ring-1 ring-inset ring-gray-300
                                    placeholder:text-gray-400 focus:ring-2
                                    focus:ring-inset focus:ring-black
                                    sm:text-sm sm:leading-6" %>
        </div>
        <div>
          <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= f.password_field :password,
                            autocomplete: "new_password",
                            class: "block w-full rounded-md border-0 py-1.5 text-gray-900
                                    shadow-sm ring-1 ring-inset ring-gray-300
                                    placeholder:text-gray-400 focus:ring-2
                                    focus:ring-inset focus:ring-black
                                    sm:text-sm sm:leading-6" %>
        </div>
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= f.password_field :password_confirmation,
                            autocomplete: "new_password",
                            class: "block w-full rounded-md border-0 py-1.5 text-gray-900
                                    shadow-sm ring-1 ring-inset ring-gray-300
                                    placeholder:text-gray-400 focus:ring-2
                                    focus:ring-inset focus:ring-black
                                    sm:text-sm sm:leading-6" %>
        </div>
        <div>
          <%= f.submit "Sign up",
                      class: "mt-6 flex w-full justify-center rounded-md bg-primary px-3 py-1.5
                            text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-dark
                            focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2
                            focus-visible:outline-black" %>

        </div>
        <p class="mt-10 text-center text-sm text-gray-500">
          Already a member?
          <%= link_to "Log in", new_session_path(resource_name),
                                class:'font-semibold leading-6 text-primary
                                      hover:text-primary-dark' %>
        </p>
      <% end %>
    </div>
  </div>

</div>
